
*
	margin:0
	padding:0
	text-decoration none
	link-style-type none

.site-title
	font-family plantinBold




@media (min-width 650px)

	header#masthead
		position absolute
		top 0
		z-index 1
		width 100%
		a
			color #fff	
	
		
		h1.site-title a
			position absolute
			padding-top 0
			margin-top 0
			margin-left 10%

		nav ul
			padding-right 10%
			
			li
				a
					font-family plantinRegular
					padding-right 20px
					font-size 20pt
	
		
	.homeTextBlock
		text-decoration none
		link-style-type none
		
		
			
		h2
			margin-left 10%
			padding-top 200px
			color #fff
			text-decoration none
			link-style-type none
			font-family plantinRegular
			font-weight 300
			font-size: 52.5pt
			width 60%
			
			
		h3
			margin-top:10px
			margin-left 10%	
			color #fff
			text-decoration none
			link-style-type none
			font-size 36pt
			font-family whitneyMedium
			font-weight 100
	
	.exampleClass img 
		display:none;
	
	.exampleClass 
		height 100vh
		width 100%
		background-repeat no-repeat
		background-size cover
		


// mobile first styling

@media (max-width 649px)

	#menu-menu-1 
		margin-left 0
		padding-left 2%
	
	.mobilenav ul li
		&:nth-child(1)
			&:after
				content '+'
				font-size 60px
				font-family plantinLight
				font-weight 100
				right 1%
				transform: translateY(-5px)
				position absolute
				line-height:70px
				
				
		&:nth-child(2)
			&:after
				content '+'
				font-size 60px
				font-family plantinLight
				font-weight 100
				right 1%
				transform: translateY(-5px)
				position absolute
				line-height:70px
				
		&:nth-child(3)
			&:after
				content '+'
				font-size 60px
				font-family plantinLight
				font-weight 100
				right 1%
				transform: translateY(-5px)
				position absolute
				line-height:70px
				
				
		&:nth-child(4)
			&:after
				content '+'
				font-size 60px
				font-family plantinLight
				font-weight 100
				right 1%
				transform: translateY(-5px)
				position absolute
				line-height:70px						

	.mobilenav ul li 
		min-width 300px
		text-align left
		border-bottom 1px solid black
		
		a
			font-size:32pt; 
			font-family plantinRegular
			font-weight 300
		
		
	

	header#masthead
		width 100%
		
		

	.linkWrapper
		text-decoration none
		link-style-type none
		
	#main .exampleClass 
		background-repeat no-repeat
		background-size cover
		background #fff
		background-image none !important
		
		
		img
			width 100%
			text-align center
			

		.homeTextBlock 
			position relative
			margin-right 2%
			margin-left 2%

		
			
		
		h2 
			position relative
			margin-top 20px
			padding-bottom 0
			margin-bottom 0
			width 75%
			font-family plantinRegular
			font-weight 300
			color #030303
			font-size 27pt
			text-decoration none
			
			
			z-index 5
		h3
			position relative
			margin-bottom 20px
			padding-top 0
			margin-top 0
			z-index 5
			font-family plantinRegular
			font-weight 500
			color #858585
			font-size 27pt
			text-decoration none
				
			
			
		.plusSign
			position absolute
			top:10%;
			right 0
			font-family plantinLight
			font-weight 100
			
		.plusSign
			&:after 
				content '+'
				font-size 60px
				font-weight 100
				font-family plantinLight
				font-weight 100
				line-height 2.2
				color #000

		  
		
			
